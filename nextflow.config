params {
    csv_file = "/home/nishant.shekhar/nextflow-pipeline/rna-seq/sample_file.csv"

    outdir = "res"   
}

process {
    withName:multiqc_process {
            publishDir = [
                [
                    path: { "$params.outdir/report/" },
                    pattern: "*.html",
                    mode: 'link'
                ]
            ]
        }
}

timeline {
    enabled = true
    file    = "${params.outdir}/execution_timeline.html"
}

report {
    enabled = true
    file    = "${params.outdir}/execution_report.html"
}

trace {
    enabled = true
    file    = "${params.outdir}/execution_trace.txt"
    fields = 'name,task_id,hash,native_id,status,exit,submit,start,complete,duration,realtime,queue,cpus,%cpu,peak_rss,peak_vmem,rchar,wchar'
}
